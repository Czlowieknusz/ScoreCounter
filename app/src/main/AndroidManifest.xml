<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.scorecounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".basketballScreen"
            android:label="@string/basketball"></activity>

        <activity
            android:name=".volleyballScreen"
            android:label="@string/volleyball"></activity>
        <activity
            android:name=".WinnerWindow"
            android:label="Match result:"
            android:theme="@android:style/Theme.Dialog">

        </activity>
    </application>

</manifest>